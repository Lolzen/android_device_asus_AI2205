LOCAL_PATH := $(call my-dir)

# Recovery fstab (system)
include $(CLEAR_VARS)
LOCAL_MODULE := recovery.fstab
LOCAL_MODULE_TAGS := optional
LOCAL_MODULE_CLASS := ETC
LOCAL_SRC_FILES := root/system/etc/recovery.fstab
LOCAL_MODULE_PATH := $(TARGET_RECOVERY_OUT)/root/system/etc
include $(BUILD_PREBUILT)

# TWRP flags
include $(CLEAR_VARS)
LOCAL_MODULE := twrp.flags
LOCAL_MODULE_TAGS := optional
LOCAL_MODULE_CLASS := ETC
LOCAL_SRC_FILES := root/system/etc/twrp.flags
LOCAL_MODULE_PATH := $(TARGET_RECOVERY_OUT)/root/system/etc
include $(BUILD_PREBUILT)

# Recovery fstab (vendor)
include $(CLEAR_VARS)
LOCAL_MODULE := recovery.fstab.vendor
LOCAL_MODULE_TAGS := optional
LOCAL_MODULE_CLASS := ETC
LOCAL_SRC_FILES := root/vendor/etc/recovery.fstab
LOCAL_MODULE_PATH := $(TARGET_RECOVERY_OUT)/root/vendor/etc
include $(BUILD_PREBUILT)

# Recovery keys header
include $(CLEAR_VARS)
LOCAL_MODULE := recovery_keys.h
LOCAL_MODULE_TAGS := optional
LOCAL_MODULE_CLASS := HEADER_LIBRARIES
LOCAL_SRC_FILES := recovery_keys.h
LOCAL_EXPORT_C_INCLUDE_DIRS := $(LOCAL_PATH)
include $(BUILD_HEADER_LIBRARY)