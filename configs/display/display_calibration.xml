<?xml version="1.0" encoding="utf-8"?>
<DisplayCalibration>
    <!-- ASUS ROG Phone 7 AMOLED Display Calibration -->
    
    <PanelInfo>
        <Manufacturer>Samsung</Manufacturer>
        <Model>AMS655X_AMOLED</Model>
        <PanelType>AMOLED</PanelType>
        <Size>6.78</Size> <!-- inches -->
        <Resolution width="1080" height="2448"/>
        <PixelDensity>395</PixelDensity> <!-- PPI -->
        <AspectRatio>20.4:9</AspectRatio>
    </PanelInfo>
    
    <ColorCalibration>
        <!-- sRGB Color Space -->
        <ColorSpace name="sRGB">
            <Primaries>
                <Red x="0.640" y="0.330"/>
                <Green x="0.300" y="0.600"/>
                <Blue x="0.150" y="0.060"/>
                <White x="0.3127" y="0.3290"/>
            </Primaries>
            
            <TransferFunction>
                <Gamma>2.2</Gamma>
                <LinearSection>0.04045</LinearSection>
                <Alpha>0.055</Alpha>
            </TransferFunction>
            
            <ColorMatrix>
                <Row0>1.0000 0.0000 0.0000</Row0>
                <Row1>0.0000 1.0000 0.0000</Row1>
                <Row2>0.0000 0.0000 1.0000</Row2>
            </ColorMatrix>
        </ColorSpace>
        
        <!-- Display P3 Color Space -->
        <ColorSpace name="DisplayP3">
            <Primaries>
                <Red x="0.680" y="0.320"/>
                <Green x="0.265" y="0.690"/>
                <Blue x="0.150" y="0.060"/>
                <White x="0.3127" y="0.3290"/>
            </Primaries>
            
            <TransferFunction>
                <Gamma>2.2</Gamma>
                <LinearSection>0.04045</LinearSection>
                <Alpha>0.055</Alpha>
            </TransferFunction>
            
            <ColorMatrix>
                <Row0>0.8225 0.1774 0.0000</Row0>
                <Row1>0.0331 0.9669 0.0000</Row1>
                <Row2>0.0171 0.0723 0.9107</Row2>
            </ColorMatrix>
        </ColorSpace>
        
        <!-- DCI-P3 Color Space -->
        <ColorSpace name="DCIP3">
            <Primaries>
                <Red x="0.680" y="0.320"/>
                <Green x="0.265" y="0.690"/>
                <Blue x="0.150" y="0.060"/>
                <White x="0.314" y="0.351"/>
            </Primaries>
            
            <TransferFunction>
                <Gamma>2.6</Gamma>
                <LinearSection>0.0</LinearSection>
                <Alpha>0.0</Alpha>
            </TransferFunction>
            
            <ColorMatrix>
                <Row0>0.7866 0.2134 0.0000</Row0>
                <Row1>0.0000 1.0000 0.0000</Row1>
                <Row2>0.0000 0.0454 0.9546</Row2>
            </ColorMatrix>
        </ColorSpace>
        
        <!-- Rec.2020 Color Space -->
        <ColorSpace name="Rec2020">
            <Primaries>
                <Red x="0.708" y="0.292"/>
                <Green x="0.170" y="0.797"/>
                <Blue x="0.131" y="0.046"/>
                <White x="0.3127" y="0.3290"/>
            </Primaries>
            
            <TransferFunction>
                <Gamma>2.4</Gamma>
                <LinearSection>0.08124</LinearSection>
                <Alpha>0.09929</Alpha>
            </TransferFunction>
            
            <ColorMatrix>
                <Row0>0.6274 0.3293 0.0433</Row0>
                <Row1>0.0691 0.9195 0.0114</Row1>
                <Row2>0.0164 0.0880 0.8956</Row2>
            </ColorMatrix>
        </ColorSpace>
    </ColorCalibration>
    
    <BrightnessCalibration>
        <!-- Brightness mapping from nits to backlight level -->
        <BrightnessMapping>
            <Point nits="0.5" backlight="1"/>
            <Point nits="1.0" backlight="2"/>
            <Point nits="2.0" backlight="4"/>
            <Point nits="5.0" backlight="10"/>
            <Point nits="10.0" backlight="20"/>
            <Point nits="25.0" backlight="50"/>
            <Point nits="50.0" backlight="100"/>
            <Point nits="100.0" backlight="150"/>
            <Point nits="200.0" backlight="200"/>
            <Point nits="400.0" backlight="255"/>
            <Point nits="600.0" backlight="300"/>
            <Point nits="800.0" backlight="350"/>
            <Point nits="1000.0" backlight="400"/>
        </BrightnessMapping>
        
        <!-- Ambient light sensor mapping -->
        <AmbientLightMapping>
            <Point lux="0" brightness="1"/>
            <Point lux="1" brightness="5"/>
            <Point lux="5" brightness="15"/>
            <Point lux="10" brightness="25"/>
            <Point lux="50" brightness="75"/>
            <Point lux="100" brightness="125"/>
            <Point lux="500" brightness="200"/>
            <Point lux="1000" brightness="275"/>
            <Point lux="5000" brightness="350"/>
            <Point lux="10000" brightness="400"/>
        </AmbientLightMapping>
        
        <!-- ROG Gaming brightness profiles -->
        <GamingProfiles>
            <Profile name="indoor_gaming" minBrightness="100" maxBrightness="300" adaptiveEnabled="true"/>
            <Profile name="outdoor_gaming" minBrightness="200" maxBrightness="400" adaptiveEnabled="false"/>
            <Profile name="night_gaming" minBrightness="1" maxBrightness="50" adaptiveEnabled="true"/>
        </GamingProfiles>
    </BrightnessCalibration>
    
    <GammaCalibration>
        <!-- Gamma curves for different modes -->
        <GammaMode name="Standard">
            <RedGamma>2.2</RedGamma>
            <GreenGamma>2.2</GreenGamma>
            <BlueGamma>2.2</BlueGamma>
        </GammaMode>
        
        <GammaMode name="Vivid">
            <RedGamma>2.1</RedGamma>
            <GreenGamma>2.1</GreenGamma>
            <BlueGamma>2.1</BlueGamma>
        </GammaMode>
        
        <GammaMode name="Cinema">
            <RedGamma>2.4</RedGamma>
            <GreenGamma>2.4</GreenGamma>
            <BlueGamma>2.4</BlueGamma>
        </GammaMode>
        
        <GammaMode name="Gaming">
            <RedGamma>2.0</RedGamma>
            <GreenGamma>2.0</GreenGamma>
            <BlueGamma>2.0</BlueGamma>
        </GammaMode>
    </GammaCalibration>
    
    <TemperatureCalibration>
        <!-- Color temperature presets -->
        <TemperatureMode name="Cool" temperature="7500K">
            <RedMultiplier>0.95</RedMultiplier>
            <GreenMultiplier>1.00</GreenMultiplier>
            <BlueMultiplier>1.05</BlueMultiplier>
        </TemperatureMode>
        
        <TemperatureMode name="Default" temperature="6500K">
            <RedMultiplier>1.00</RedMultiplier>
            <GreenMultiplier>1.00</GreenMultiplier>
            <BlueMultiplier>1.00</BlueMultiplier>
        </TemperatureMode>
        
        <TemperatureMode name="Warm" temperature="5500K">
            <RedMultiplier>1.05</RedMultiplier>
            <GreenMultiplier>1.00</GreenMultiplier>
            <BlueMultiplier>0.95</BlueMultiplier>
        </TemperatureMode>
        
        <TemperatureMode name="Adaptive" temperature="variable">
            <RedMultiplier>variable</RedMultiplier>
            <GreenMultiplier>1.00</GreenMultiplier>
            <BlueMultiplier>variable</BlueMultiplier>
            <AdaptiveEnabled>true</AdaptiveEnabled>
            <TimeBasedAdjustment>true</TimeBasedAdjustment>
        </TemperatureMode>
    </TemperatureCalibration>
</DisplayCalibration>