    <!-- Android 15 Enhanced Features -->
    <Android15Features>
        <!-- AV1 Hardware Acceleration -->
        <MediaCodec name="c2.qti.av1.decoder.hw" type="video/av01">
            <Limit name="size" min="96x96" max="8192x8192"/>
            <Limit name="frame-rate" range="1-120"/>
            <Limit name="bitrate" range="1000-200000000"/>
            <Feature name="adaptive-playback"/>
            <Feature name="hdr10-plus-metadata"/>
            <Feature name="hardware-accelerated"/>
        </MediaCodec>

        <!-- Enhanced HDR Support -->
        <MediaCodec name="c2.qti.hevc.decoder.hdr" type="video/hevc">
            <Limit name="size" min="96x96" max="8192x8192"/>
            <Limit name="frame-rate" range="1-120"/>
            <Limit name="bitrate" range="1000-300000000"/>
            <Feature name="hdr10-metadata"/>
            <Feature name="hdr10-plus-metadata"/>
            <Feature name="dolby-vision"/>
            <Feature name="adaptive-playback"/>
        </MediaCodec>

        <!-- Spatial Audio Codec -->
        <MediaCodec name="c2.qti.spatial.audio.decoder" type="audio/mp4a-latm">
            <Limit name="channel-count" max="16"/>
            <Limit name="sample-rate" ranges="48000,96000"/>
            <Limit name="bitrate" range="128000-2000000"/>
            <Feature name="spatial-audio"/>
            <Feature name="object-based-audio"/>
            <Feature name="binaural-rendering"/>
        </MediaCodec>
    </Android15Features>
</MediaCodecs>