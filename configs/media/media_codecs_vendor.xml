<?xml version="1.0" encoding="utf-8" ?>
<!-- ASUS ROG Phone 7 Vendor Media Codecs -->
<!-- Qualcomm SM8550 Vendor Specific Codecs -->

<MediaCodecs>
    <Settings>
        <Setting name="max-video-encoder-input-buffers" value="11"/>
        <Setting name="supports-multiple-secure-codecs" value="false"/>
        <Setting name="supports-secure-with-non-secure-codec" value="true"/>
    </Settings>

    <Decoders>
        <!-- Qualcomm Hardware Video Decoders -->
        <MediaCodec name="OMX.qcom.video.decoder.avc" type="video/avc">
            <Limit name="size" min="64x64" max="8192x8192"/>
            <Limit name="alignment" value="2x2"/>
            <Limit name="block-size" value="16x16"/>
            <Limit name="blocks-per-second" min="1" max="2073600"/>
            <Limit name="bitrate" range="1-300000000"/>
            <Feature name="adaptive-playback"/>
            <Feature name="secure-playback"/>
            <Feature name="tunneled-playback"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.video.decoder.avc.secure" type="video/avc">
            <Limit name="size" min="64x64" max="8192x8192"/>
            <Limit name="alignment" value="2x2"/>
            <Limit name="block-size" value="16x16"/>
            <Limit name="blocks-per-second" min="1" max="2073600"/>
            <Limit name="bitrate" range="1-300000000"/>
            <Feature name="adaptive-playback"/>
            <Feature name="secure-playback" required="true"/>
            <Feature name="tunneled-playback"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.video.decoder.hevc" type="video/hevc">
            <Limit name="size" min="64x64" max="8192x8192"/>
            <Limit name="alignment" value="2x2"/>
            <Limit name="block-size" value="16x16"/>
            <Limit name="blocks-per-second" min="1" max="2073600"/>
            <Limit name="bitrate" range="1-300000000"/>
            <Feature name="adaptive-playback"/>
            <Feature name="secure-playback"/>
            <Feature name="tunneled-playback"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.video.decoder.hevc.secure" type="video/hevc">
            <Limit name="size" min="64x64" max="8192x8192"/>
            <Limit name="alignment" value="2x2"/>
            <Limit name="block-size" value="16x16"/>
            <Limit name="blocks-per-second" min="1" max="2073600"/>
            <Limit name="bitrate" range="1-300000000"/>
            <Feature name="adaptive-playback"/>
            <Feature name="secure-playback" required="true"/>
            <Feature name="tunneled-playback"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.video.decoder.vp8" type="video/x-vnd.on2.vp8">
            <Limit name="size" min="64x64" max="4096x4096"/>
            <Limit name="alignment" value="2x2"/>
            <Limit name="block-size" value="16x16"/>
            <Limit name="blocks-per-second" min="1" max="1044480"/>
            <Limit name="bitrate" range="1-100000000"/>
            <Feature name="adaptive-playback"/>
            <Feature name="secure-playback"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.video.decoder.vp9" type="video/x-vnd.on2.vp9">
            <Limit name="size" min="64x64" max="8192x8192"/>
            <Limit name="alignment" value="2x2"/>
            <Limit name="block-size" value="16x16"/>
            <Limit name="blocks-per-second" min="1" max="2073600"/>
            <Limit name="bitrate" range="1-300000000"/>
            <Feature name="adaptive-playback"/>
            <Feature name="secure-playback"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.video.decoder.vp9.secure" type="video/x-vnd.on2.vp9">
            <Limit name="size" min="64x64" max="8192x8192"/>
            <Limit name="alignment" value="2x2"/>
            <Limit name="block-size" value="16x16"/>
            <Limit name="blocks-per-second" min="1" max="2073600"/>
            <Limit name="bitrate" range="1-300000000"/>
            <Feature name="adaptive-playback"/>
            <Feature name="secure-playback" required="true"/>
        </MediaCodec>

        <!-- Qualcomm Audio Decoders -->
        <MediaCodec name="OMX.qcom.audio.decoder.aac" type="audio/mp4a-latm">
            <Limit name="channel-count" max="8"/>
            <Limit name="sample-rate" ranges="7350,8000,11025,12000,16000,22050,24000,32000,44100,48000,64000,88200,96000"/>
            <Limit name="bitrate" range="8000-960000"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.audio.decoder.mp3" type="audio/mpeg">
            <Limit name="channel-count" max="2"/>
            <Limit name="sample-rate" ranges="8000,11025,12000,16000,22050,24000,32000,44100,48000"/>
            <Limit name="bitrate" range="8000-320000"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.audio.decoder.flac" type="audio/flac">
            <Limit name="channel-count" max="8"/>
            <Limit name="sample-rate" ranges="8000,11025,12000,16000,22050,24000,32000,44100,48000,88200,96000,176400,192000"/>
            <Limit name="bitrate" range="1000-21000000"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.audio.decoder.alac" type="audio/alac">
            <Limit name="channel-count" max="8"/>
            <Limit name="sample-rate" ranges="8000,11025,12000,16000,22050,24000,32000,44100,48000,88200,96000,176400,192000"/>
            <Limit name="bitrate" range="1000-10000000"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.audio.decoder.ape" type="audio/x-ape">
            <Limit name="channel-count" max="2"/>
            <Limit name="sample-rate" ranges="8000,11025,12000,16000,22050,24000,32000,44100,48000,88200,96000,176400,192000"/>
            <Limit name="bitrate" range="1000-5000000"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.audio.decoder.wma" type="audio/x-ms-wma">
            <Limit name="channel-count" max="8"/>
            <Limit name="sample-rate" ranges="8000,11025,12000,16000,22050,24000,32000,44100,48000"/>
            <Limit name="bitrate" range="32000-768000"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.audio.decoder.wmapro" type="audio/x-ms-wma-pro">
            <Limit name="channel-count" max="8"/>
            <Limit name="sample-rate" ranges="8000,11025,12000,16000,22050,24000,32000,44100,48000,88200,96000"/>
            <Limit name="bitrate" range="32000-1500000"/>
        </MediaCodec>

        <!-- Gaming Optimized Decoders -->
        <MediaCodec name="OMX.qcom.video.decoder.avc.gaming" type="video/avc">
            <Limit name="size" min="64x64" max="1920x1080"/>
            <Limit name="alignment" value="2x2"/>
            <Limit name="block-size" value="16x16"/>
            <Limit name="blocks-per-second" min="1" max="972000"/>
            <Limit name="bitrate" range="1-50000000"/>
            <Limit name="frame-rate" range="1-240"/>
            <Feature name="low-latency"/>
            <Feature name="adaptive-playback"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.video.decoder.hevc.gaming" type="video/hevc">
            <Limit name="size" min="64x64" max="1920x1080"/>
            <Limit name="alignment" value="2x2"/>
            <Limit name="block-size" value="16x16"/>
            <Limit name="blocks-per-second" min="1" max="972000"/>
            <Limit name="bitrate" range="1-50000000"/>
            <Limit name="frame-rate" range="1-240"/>
            <Feature name="low-latency"/>
            <Feature name="adaptive-playback"/>
        </MediaCodec>
    </Decoders>

    <Encoders>
        <!-- Qualcomm Hardware Video Encoders -->
        <MediaCodec name="OMX.qcom.video.encoder.avc" type="video/avc">
            <Limit name="size" min="64x64" max="8192x8192"/>
            <Limit name="alignment" value="2x2"/>
            <Limit name="block-size" value="16x16"/>
            <Limit name="blocks-per-second" min="1" max="2073600"/>
            <Limit name="bitrate" range="1-300000000"/>
            <Limit name="frame-rate" range="1-480"/>
            <Feature name="intra-refresh"/>
            <Feature name="can-swap-width-height"/>
            <Feature name="bitrate-modes" value="VBR,CBR,CQ"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.video.encoder.hevc" type="video/hevc">
            <Limit name="size" min="64x64" max="8192x8192"/>
            <Limit name="alignment" value="2x2"/>
            <Limit name="block-size" value="16x16"/>
            <Limit name="blocks-per-second" min="1" max="2073600"/>
            <Limit name="bitrate" range="1-300000000"/>
            <Limit name="frame-rate" range="1-480"/>
            <Feature name="intra-refresh"/>
            <Feature name="can-swap-width-height"/>
            <Feature name="bitrate-modes" value="VBR,CBR,CQ"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.video.encoder.vp8" type="video/x-vnd.on2.vp8">
            <Limit name="size" min="64x64" max="4096x4096"/>
            <Limit name="alignment" value="2x2"/>
            <Limit name="block-size" value="16x16"/>
            <Limit name="blocks-per-second" min="1" max="1044480"/>
            <Limit name="bitrate" range="1-100000000"/>
            <Limit name="frame-rate" range="1-240"/>
            <Feature name="intra-refresh"/>
            <Feature name="can-swap-width-height"/>
            <Feature name="bitrate-modes" value="VBR,CBR"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.video.encoder.vp9" type="video/x-vnd.on2.vp9">
            <Limit name="size" min="64x64" max="8192x8192"/>
            <Limit name="alignment" value="2x2"/>
            <Limit name="block-size" value="16x16"/>
            <Limit name="blocks-per-second" min="1" max="2073600"/>
            <Limit name="bitrate" range="1-300000000"/>
            <Limit name="frame-rate" range="1-240"/>
            <Feature name="intra-refresh"/>
            <Feature name="can-swap-width-height"/>
            <Feature name="bitrate-modes" value="VBR,CBR,CQ"/>
        </MediaCodec>

        <!-- Gaming Optimized Encoders -->
        <MediaCodec name="OMX.qcom.video.encoder.avc.gaming" type="video/avc">
            <Limit name="size" min="64x64" max="3840x2160"/>
            <Limit name="alignment" value="2x2"/>
            <Limit name="block-size" value="16x16"/>
            <Limit name="blocks-per-second" min="1" max="1620000"/>
            <Limit name="bitrate" range="64000-100000000"/>
            <Limit name="frame-rate" range="1-240"/>
            <Feature name="intra-refresh"/>
            <Feature name="can-swap-width-height"/>
            <Feature name="low-latency"/>
            <Feature name="bitrate-modes" value="CBR,VBR"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.video.encoder.hevc.gaming" type="video/hevc">
            <Limit name="size" min="64x64" max="3840x2160"/>
            <Limit name="alignment" value="2x2"/>
            <Limit name="block-size" value="16x16"/>
            <Limit name="blocks-per-second" min="1" max="1620000"/>
            <Limit name="bitrate" range="64000-100000000"/>
            <Limit name="frame-rate" range="1-240"/>
            <Feature name="intra-refresh"/>
            <Feature name="can-swap-width-height"/>
            <Feature name="low-latency"/>
            <Feature name="bitrate-modes" value="CBR,VBR"/>
        </MediaCodec>

        <!-- Screen Recording Optimized Encoder -->
        <MediaCodec name="OMX.qcom.video.encoder.avc.screenrecord" type="video/avc">
            <Limit name="size" min="320x240" max="1080x2448"/>
            <Limit name="alignment" value="2x2"/>
            <Limit name="block-size" value="16x16"/>
            <Limit name="blocks-per-second" min="1200" max="816480"/>
            <Limit name="bitrate" range="64000-50000000"/>
            <Limit name="frame-rate" range="1-165"/>
            <Feature name="intra-refresh"/>
            <Feature name="low-latency"/>
            <Feature name="real-time"/>
        </MediaCodec>

        <!-- Audio Encoders -->
        <MediaCodec name="OMX.qcom.audio.encoder.aac" type="audio/mp4a-latm">
            <Limit name="channel-count" max="8"/>
            <Limit name="sample-rate" ranges="8000,11025,12000,16000,22050,24000,32000,44100,48000,88200,96000"/>
            <Limit name="bitrate" range="8000-960000"/>
            <Feature name="bitrate-modes" value="VBR,CBR"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.audio.encoder.qcelp13" type="audio/qcelp">
            <Limit name="channel-count" max="1"/>
            <Limit name="sample-rate" ranges="8000"/>
            <Limit name="bitrate" range="4750-14400"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.audio.encoder.evrc" type="audio/evrc">
            <Limit name="channel-count" max="1"/>
            <Limit name="sample-rate" ranges="8000"/>
            <Limit name="bitrate" range="4750-9600"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.audio.encoder.amrnb" type="audio/3gpp">
            <Limit name="channel-count" max="1"/>
            <Limit name="sample-rate" ranges="8000"/>
            <Limit name="bitrate" range="4750-12200"/>
        </MediaCodec>

        <MediaCodec name="OMX.qcom.audio.encoder.amrwb" type="audio/amr-wb">
            <Limit name="channel-count" max="1"/>
            <Limit name="sample-rate" ranges="16000"/>
            <Limit name="bitrate" range="6600-23850"/>
        </MediaCodec>
    </Encoders>

    <!-- Gaming and ROG Specific Features -->
    <ROGGamingCodecs>
        <!-- Low Latency Gaming Decoder -->
        <MediaCodec name="c2.qti.avc.decoder.gaming" type="video/avc">
            <Limit name="size" min="320x240" max="1920x1080"/>
            <Limit name="frame-rate" range="30-240"/>
            <Limit name="bitrate" range="100000-50000000"/>
            <Feature name="low-latency"/>
            <Feature name="zero-copy"/>
            <Feature name="adaptive-playback"/>
        </MediaCodec>

        <!-- Streaming Optimized Encoder -->
        <MediaCodec name="c2.qti.avc.encoder.streaming" type="video/avc">
            <Limit name="size" min="640x480" max="1920x1080"/>
            <Limit name="frame-rate" range="30-120"/>
            <Limit name="bitrate" range="500000-20000000"/>
            <Feature name="low-latency"/>
            <Feature name="real-time"/>
