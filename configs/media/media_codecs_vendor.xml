        <!-- Gaming Audio Codec with Enhanced Features -->
        <MediaCodec name="c2.qti.aac.encoder.gaming" type="audio/mp4a-latm">
            <Limit name="channel-count" max="8"/>
            <Limit name="sample-rate" ranges="48000,96000"/>
            <Limit name="bitrate" range="128000-512000"/>
            <Feature name="low-latency"/>
            <Feature name="spatial-audio"/>
