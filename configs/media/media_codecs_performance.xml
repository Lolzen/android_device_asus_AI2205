            <Limit name="measured-frame-rate-1920x1080-gaming" range="200-400"/>
            <Limit name="measured-frame-rate-2560x1440-gaming" range="100-200"/>
        </Type>

        <Type name="video/x-vnd.on2.vp8">
            <Limit name="measured-frame-rate-320x240" range="900-1300"/>
