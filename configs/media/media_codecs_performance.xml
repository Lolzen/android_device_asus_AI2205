    <!-- Gaming Optimized Performance -->
    <GamingPerformance>
        <!-- Low Latency Encoding -->
        <LowLatencyEncoding>
            <Type name="video/avc">
                <Profile name="baseline">
                    <Resolution width="1920" height="1080" frameRate="120" bitRate="8000000" latency="16"/>
                    <Resolution width="1280" height="720" frameRate="240" bitRate="6000000" latency="8"/>
                </Profile>
                <Profile name="high">
                    <Resolution width="1920" height="1080" frameRate="60" bitRate="12000000" latency="20"/>
                    <Resolution width="2560" height="1440" frameRate="60" bitRate="16000000" latency="25"/>
                </Profile>
            </Type>

            <Type name="video/hevc">
                <Profile name="main">
                    <Resolution width="1920" height="1080" frameRate="120" bitRate="6000000" latency="18"/>
                    <Resolution width="1280" height="720" frameRate="240" bitRate="4000000" latency="10"/>
                </Profile>
                <Profile name="main10">
                    <Resolution width="1920" height="1080" frameRate="60" bitRate="10000000" latency="22"/>
                    <Resolution width="3840" height="2160" frameRate="30" bitRate="25000000" latency="30"/>
                </Profile>
            </Type>
        </LowLatencyEncoding>

        <!-- Screen Recording Performance -->
        <ScreenRecording>
            <Resolution width="1080" height="2448" frameRate="60" bitRate="16000000" format="video/avc"/>
            <Resolution width="1080" height="2448" frameRate="120" bitRate="25000000" format="video/hevc"/>
            <Resolution width="1080" height="2448" frameRate="165" bitRate="35000000" format="video/hevc"/>
        </ScreenRecording>

        <!-- Game Streaming Performance -->
        <GameStreaming>
            <Platform name="twitch">
                <Resolution width="1920" height="1080" frameRate="60" bitRate="8000000" format="video/avc"/>
                <Resolution width="1280" height="720" frameRate="60" bitRate="4500000" format="video/avc"/>
            </Platform>
            <Platform name="youtube">
                <Resolution width="1920" height="1080" frameRate="60" bitRate="9000000" format="video/avc"/>
                <Resolution width="2560" height="1440" frameRate="60" bitRate="16000000" format="video/hevc"/>
            </Platform>
        </GameStreaming>
    </GamingPerformance>

    <!-- Audio Performance -->
    <AudioPerformance>
