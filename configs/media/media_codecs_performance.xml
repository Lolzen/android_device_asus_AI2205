        <Type name="video/hevc">
            <Limit name="measured-frame-rate-320x240" range="1000-1400"/>
            <Limit name="measured-frame-rate-720x480" range="700-1000"/>
            <Limit name="measured-frame-rate-1280x720" range="350-550"/>
            <Limit name="measured-frame-rate-1920x1080" range="180-280"/>
